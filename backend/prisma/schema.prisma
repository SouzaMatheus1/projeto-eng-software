generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int    @id @default(autoincrement())
  cpf   String @unique
  senha String
  nome  String
  tipo  String
}

model FamiliaBaixaRenda {
  id              Int     @id @default(autoincrement())
  chefeFamiliaCPF String  @unique
  nomeChefe       String
  rendaFamiliar   Float
  membros         Int
  status          String
}

model CadUnico {
  id                Int      @id @default(autoincrement())
  cpf               String   @unique
  nis               String   @unique
  situacao          String
  ultimaAtualizacao DateTime
}

model Identificacao {
  id             Int       @id @default(autoincrement())
  cpf            String    @unique
  nome           String
  dataNascimento DateTime
  nomeMae        String
  rg             String?
  orgaoEmissor   String?
  ufEmissor      String?
  dataEmissao    DateTime?
}

model BolsaFamilia {
  id                  Int       @id @default(autoincrement())
  cpf                 String    @unique
  nis                 String    @unique
  status              String
  valorBeneficio      Float
  dataUltimoPagamento DateTime?
}

model Naturalidade {
  id                  Int     @id @default(autoincrement())
  cpf                 String  @unique
  paisNascimento      String
  estadoNascimento    String?
  municipioNascimento String?
}

model RelacaoTrabalhista {
  id           Int       @id @default(autoincrement())
  cpf          String
  cnpj         String
  nomeEmpresa  String
  dataAdmissao DateTime
  dataDemissao DateTime?
  cargo        String
  remuneracao  Float

  @@index([cpf])
}

model PCD {
  id              Int     @id @default(autoincrement())
  cpf             String  @unique
  tipoDeficiencia String
  descricaoLaudo  String?
  statusBeneficio String?
}

model Municipio {
  id            Int     @id @default(autoincrement())
  codigoIBGE    String  @unique
  nomeMunicipio String
  uf            String
  populacao     Int?
  regiao        String?
}