generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Tabela de usuários para login (RF2)
model User {
  id    Int     @id @default(autoincrement())
  cpf   String  @unique
  senha String
  nome  String
  tipo  String // "Cidadão", "Assistente Social", "Administrador"
}

// Tabela para "Consultar casos de Família de Baixa Renda" (RF3)
model FamiliaBaixaRenda {
  id              Int     @id @default(autoincrement())
  chefeFamiliaCPF String  @unique
  nomeChefe       String
  rendaFamiliar   Float
  membros         Int
  status          String // "Aprovado", "Em Análise", etc.
}

// Tabela para "Realizar a consulta do Cadastro Único" (RF5)
model CadUnico {
  id                Int      @id @default(autoincrement())
  cpf               String   @unique
  nis               String   @unique
  situacao          String
  ultimaAtualizacao DateTime
}